<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>gov.usgs.cida.gdp.deployer</groupId>
        <artifactId>gdp-deployer</artifactId>
        <version>11-SNAPSHOT</version>
    </parent>
    <artifactId>geoserver</artifactId>
    <packaging>pom</packaging>
    <name>GDP Geoserver Deployer</name>
    <dependencies>
        <dependency>
            <groupId>gov.usgs.cida.gdp</groupId>
            <artifactId>${project.artifactId}</artifactId>
            <type>war</type>
            <version>${cargo.deploy.version}</version>
        </dependency>
    </dependencies>
    <properties>
        <cargo.deploy.version>${project.version}</cargo.deploy.version>
    </properties>
    <profiles>
        <profile>
            <id>development</id>
            <activation>
                <property>
                    <name>env.CARGO_PROFILE</name>
                    <value>development</value>
                </property>
            </activation>
            <properties>
                <cargo.containerId>tomcat6x</cargo.containerId>
                <!-- references server id in settings.xml -->
                <cargo.server.settings>cargo-javadev1-8081</cargo.server.settings>
            </properties>
        </profile>
        <profile>
            <id>staging</id>
            <activation>
                <property>
                    <name>env.CARGO_PROFILE</name>
                    <value>staging</value>
                </property>
            </activation>
            <properties>
                <cargo.containerId>tomcat6x</cargo.containerId>
                <!-- references server id in settings.xml -->
                <cargo.server.settings><!-- set when we have staging --></cargo.server.settings>
            </properties>
        </profile>
        <profile>
            <id>production</id>
            <activation>
                <property>
                    <name>env.CARGO_PROFILE</name>
                    <value>production</value>
                </property>
            </activation>
            <properties>
                <cargo.containerId>tomcat6x</cargo.containerId>
                <!-- references server id in settings.xml -->
                <cargo.server.settings>cargo-gdp2-8082</cargo.server.settings>
            </properties>
        </profile>
    </profiles>
    <build>
        <plugins>
            <plugin>
                <groupId>org.codehaus.cargo</groupId>
                <artifactId>cargo-maven2-plugin</artifactId>
                <configuration>
                    <container>
                        <containerId>${cargo.containerId}</containerId>
                        <type>remote</type>
                    </container>
                    <configuration>
                        <type>runtime</type>
                        <properties>
                            <cargo.server.settings>${cargo.server.settings}</cargo.server.settings>
                        </properties>
                    </configuration>
                    <deployer>
                        <deployables>
                            <deployable>
                                <groupId>gov.usgs.cida.gdp</groupId>
                                <artifactId>${project.artifactId}</artifactId>
                                <type>war</type>
                                <properties>
                                    <context>${project.artifactId}</context>
                                </properties>
                            </deployable>
                        </deployables>
                    </deployer>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
