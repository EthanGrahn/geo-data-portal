<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>gov.usgs.cida.gdp.deployer</groupId>
        <artifactId>gdp-deployer</artifactId>
        <version>17-SNAPSHOT</version>
    </parent>
    <artifactId>gdp-ui</artifactId>
    <packaging>pom</packaging>
    <name>GDP UI Deployer</name>
    <properties>
        <cargo.deploy.groupId>gov.usgs.cida.gdp</cargo.deploy.groupId>
        <cargo.deploy.artifactId>gdp-ui</cargo.deploy.artifactId>
        <cargo.deploy.version>${project.version}</cargo.deploy.version>
        <cargo.deploy.context>GDP_WEB</cargo.deploy.context>
    </properties>
    <dependencies>
        <dependency>
            <groupId>${cargo.deploy.groupId}</groupId>
            <artifactId>${cargo.deploy.artifactId}</artifactId>
            <type>war</type>
            <version>${cargo.deploy.version}</version>
        </dependency>
    </dependencies>   
    <profiles>
        <profile>
            <!-- needs to be here for standalone execution respecting CARGO_DEPLOY_VERSION -->
            <id>cargo-deploy-version</id>
            <activation>
                <property>
                    <name>env.CARGO_DEPLOY_VERSION</name>
                </property>
            </activation>
            <properties>
                <cargo.deploy.version>${env.CARGO_DEPLOY_VERSION}</cargo.deploy.version>
            </properties>
        </profile>
        <profile>
            <id>localhost</id>
            <activation>
                <property>
                    <name>env.CARGO_DEPLOY_PROFILE</name>
                    <value>localhost</value>
                </property>
            </activation>
            <properties>
                <cargo.deploy.skip>false</cargo.deploy.skip>
                <cargo.containerId>tomcat6x</cargo.containerId>
                <!-- references server id in settings.xml -->
                <cargo.server.settings>cargo-localhost</cargo.server.settings>
            </properties>
        </profile>
        <profile>
            <id>development</id>
            <activation>
                <property>
                    <name>env.CARGO_DEPLOY_PROFILE</name>
                    <value>development</value>
                </property>
            </activation>
            <properties>
                <cargo.deploy.skip>false</cargo.deploy.skip>
                <cargo.containerId>tomcat6x</cargo.containerId>
                <!-- references server id in settings.xml -->
                <cargo.server.settings>cargo-javadev1-8080</cargo.server.settings>
            </properties>
        </profile>
        <profile>
            <id>staging</id>
            <activation>
                <property>
                    <name>env.CARGO_DEPLOY_PROFILE</name>
                    <value>staging</value>
                </property>
            </activation>
            <properties>
                <cargo.deploy.skip>false</cargo.deploy.skip>
                <cargo.containerId>tomcat6x</cargo.containerId>
                <!-- references server id in settings.xml -->
                <cargo.server.settings>cargo-gdp2-staging-8080</cargo.server.settings>
            </properties>
        </profile>
        <profile>
            <id>production</id>
            <activation>
                <property>
                    <name>env.CARGO_DEPLOY_PROFILE</name>
                    <value>production</value>
                </property>
            </activation>
            <properties>
                <cargo.deploy.skip>false</cargo.deploy.skip>
                <cargo.containerId>tomcat6x</cargo.containerId>
                <!-- references server id in settings.xml -->
                <cargo.server.settings>cargo-gdp2-8080</cargo.server.settings>
            </properties>
        </profile>
    </profiles>
</project>
