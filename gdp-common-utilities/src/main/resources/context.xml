<!-- Example context.xml -->
<!-- Replace /tmp with wherever your GDP base directory may be -->
<Environment name="gdp.path.userspace" type="java.lang.String" value="/tmp/GDP/UserSpace"/>
<Environment name="gdp.path.shapefile" type="java.lang.String" value="/tmp/GDP/ShapeFiles"/>
<Environment name="gdp.path.workspace" type="java.lang.String" value="/tmp/GDP/WorkSpace"/>
<Environment name="gdp.path.cache" type="java.lang.String" value="/tmp/GDP/Cache"/>
<Environment name="gdp.communication.recheck" type="java.lang.String" value="60000"/>
<Environment name="gdp.file.age.limit" type="java.lang.String" value="172800000"/>
