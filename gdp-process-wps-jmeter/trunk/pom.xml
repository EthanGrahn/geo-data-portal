
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>gov.usgs.cida</groupId>
    <artifactId>gdp-process-wps-JMeter</artifactId>
    <version>1.0-SNAPSHOT</version>
    <name>gdp-process-wps-JMeter</name>

    <dependencies>
    </dependencies>
    <build>
        <plugins>
            <plugin>
                <!-- from http://www.ronniealleva.org/index.php/maven-jmeter-plugin/
                Note that this is more up to date than the apache maven jmeter plugin page -->
                <groupId>org.apache.jmeter</groupId>
                <artifactId>maven-jmeter-plugin</artifactId>
                <version>1.0</version>
                <dependencies>
                    <dependency>
                        <groupId>commons-logging</groupId>
                        <artifactId>commons-logging</artifactId>
                        <version>1.1.1</version>
                    </dependency>
                    <dependency>
                        <groupId>commons-codec</groupId>
                        <artifactId>commons-codec</artifactId>
                        <version>1.4</version>
                    </dependency>
                </dependencies>
                <executions>
                    <execution>
                        <id>jmeter-tests</id>
                        <phase>verify</phase>
                        <goals>
                            <goal>jmeter</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <!--
                    The plugin uses alphabetic order to decide the order of the tests. (Yes, really).
                    -->
                    <includes>
                        <!--
                        This test uploads the shapefile to the WFS server.
                        Probably only needs to be run once as an initialization.
                        -->
                        <include>AAA_UploadShapefileTest.jmx</include>

                        <include>GMOTest.jmx</include>

                        <!--
                        This test deletes the file we uploaded to the WFS server.
                        Probably only needs to be run once as cleanup.
                        -->
                        <include>ZZZ_DeleteShapefile.jmx</include>
                    </includes>
                    <reportDir>${project.build.directory}/jmeter-reports</reportDir>
                    <!--
                    processHost = Host where gdp-process-wps sits
                    processPort = Port where gdp-process-wps sits
                    utilityHost = Host where gdp-utility-wps sits
                    utilityPort = Port where gdp-utility-wps sits
                    wfsHost = Host where geoserver sits
                    wfsPort = Port where geoserver sits
                    wfsUsername = User name for the geoserver instance
                    wfsPassword = Password for the geoserver instance
                    -->
                    <!-- Comment this when testing locally -->
                    <jmeterUserProperties>
                        <processHost>${processHost}</processHost>
                        <processPort>${processPort}</processPort>
                        <utilityHost>${processHost}</utilityHost>
                        <utilityPort>${processPort}</utilityPort>
                        <wfsHost>${wfsHost}</wfsHost>
                        <wfsPort>${wfsPort}</wfsPort>
                        <wfsUsername>${wfsUsername}</wfsUsername>
                        <wfsPassword>${wfsPassword}</wfsPassword>
                    </jmeterUserProperties>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>xml-maven-plugin</artifactId>
                <version>1.0-beta-3</version>
                <executions>
                    <execution>
                        <phase>verify</phase>
                        <goals>
                            <goal>transform</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <transformationSets>
                        <transformationSet>
                            <dir>${project.build.directory}/jmeter-reports</dir>
                            <stylesheet>extras/jmeter-results-detail-report_21.xsl</stylesheet>
                            <outputDir>${project.build.directory}/site/jmeter-results</outputDir>
                            <fileMappers>
                                <fileMapper implementation="org.codehaus.plexus.components.io.filemappers.FileExtensionMapper">
                                    <targetExtension>html</targetExtension>
                                </fileMapper>
                            </fileMappers>
                        </transformationSet>
                    </transformationSets>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>